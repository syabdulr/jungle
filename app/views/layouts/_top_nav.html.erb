<style>
  .navbar-custom {
    background-color: #004d40;
    box-shadow: 0px 4px 10px 0px rgba(0, 0, 0, 0.1);
  }

  .navbar-custom .navbar-brand {
    font-size: 1.8rem;
    font-weight: bold;
  }

  .navbar-custom .nav-link {
    color: #e0f2f1 !important;
  }

  .navbar-custom .nav-link:hover {
    color: #ffffff !important;
  }

  .navbar-custom .dropdown-menu {
    background-color: #004d40;
  }

  .navbar-custom .dropdown-item {
    color: #e0f2f1;
  }

  .navbar-custom .dropdown-item:hover {
    color: #ffffff;
    background-color: #00796b;
  }

  .navbar-custom .nav-item.end-0 {
    margin-left: auto;
  }

  .navbar-custom .nav-link.text-danger {
    color: #ff5252 !important;
  }

  .header-text {
    color: #e0f2f1;
  }
</style>

<header class="<%= current_page?(root_path) ? "hero" : "hero small" %>">
  <section class="title">
    <h3 class="header-text">Welcome to</h3>
    <h1 class="header-text">The Jungle</h1>
    <h2 class="header-text">Where you can find any plants!</h2>
  </section>
</header>
<nav class="navbar navbar-expand-lg navbar-dark sticky-nav navbar-custom">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">Jungle</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% Category.all.each do |category| %>
          <li class="nav-item">
            <%= link_to category.name, category, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-danger"
            href="#"
            id="navbarDropdownAdmin"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Admin
          </a>
          <ul class="dropdown-menu dropdown-menu-dark">
            <li><%= link_to 'Dashboard', [:admin, :root], class: "dropdown-item" %></li>
            <li><%= link_to 'Products', [:admin, :products], class: "dropdown-item" %></li>
            <li><%= link_to 'Categories', [:admin, :categories], class: "dropdown-item" %></li>
          </ul>
        </li>
        <li class="nav-item end-0">
          <%= link_to cart_path, class: "nav-link" do %><%= fa_icon "shopping-cart" %>
          My Cart (<%= cart.size %>) <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>
